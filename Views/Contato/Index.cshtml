@model IEnumerable<WebUI.Models.ContatoViewModel>


<a class="btn btn-primary btn-sm" asp-action="Create" role="button">Adicionar</a>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SobreNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SobreNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="tdbutton">
                    <div class="btn-espaco">
                        <a class="btn btn-outline-primary btn-sm" asp-controller="Contato" role="button" asp-action="Details"asp-route-id="@item.Id">Detalhes</a>
                        <a class="btn btn-outline-success btn-sm" asp-controller="Contato" role="button" asp-action="Update" asp-route-id="@item.Id">Atualizar</a>
                        <a class="btn btn-outline-danger  btn-sm" asp-controller="Contato" role="button" asp-action="Deletar" asp-route-id="@item.Id">Excluir &amp;</a>                   
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>